                             {% if theme.photo %}
                            <div class="media-left">
                                <figure class="image is-64x64">
                                    <img src="./CSS/IMG/theme/{{theme.photo}}" alt="Image">
                                </figure>
                            </div>
                        {% endif %}
                            <div class="media-content">
                                <div class="content">
                                    <p>
                                        <strong>{{ theme.titreTheme }}</strong>
                                        <div class="separator"></div>
                                        
                                        {{ theme.descriptionTheme }}
                                    </p>
                                </div>
                            </div>
                        </article>
                    </div>
                </div>
            {% endfor %}
        </div>

    </section>
</div>
{% endblock %}
